#import "MasterViewController.h"
#import "DetailViewController.h"
#import "FontLoader.h"

@implementation MasterViewController
{
	NSArray* _fonts;
}


- (id)initWithNibName:(NSString *)nibNameOrNil bundle:(NSBundle *)nibBundleOrNil
{
    self = [super initWithNibName:nibNameOrNil bundle:nibBundleOrNil];
    if (self) {
		self.title = NSLocalizedString(@"Fonts", @"Fonts");
		if ([[UIDevice currentDevice] userInterfaceIdiom] == UIUserInterfaceIdiomPad) {
		    self.clearsSelectionOnViewWillAppear = NO;
		    self.contentSizeForViewInPopover = CGSizeMake(320.0, 600.0);
		}
		
		//Get all the fonts that have been embedded with our application
		NSMutableArray* fonts = [NSMutableArray arrayWithArray:[[FontLoader sharedFontLoader] availableFonts]];
		[fonts removeObject:@"FallbackTestFont"]; //get rid of the TestFallbackFont as we don't want to display it in our list of fonts
		
		//Add some fonts to this list that are already registered (including fonts that were bundled using the UIAppFonts key in our Info.plist
		[fonts addObjectsFromArray:[NSArray arrayWithObjects:@"HelveticaNeue", @"GillSans", @"Optima-Regular", @"Baskerville", @"DigiGrad", @"DigiShad", nil]];
		_fonts = [[fonts sortedArrayUsingSelector:@selector(compare:)] retain];
    }
    return self;
}
							
- (void)dealloc
{
	[_detailViewController release];
    [super dealloc];
}

